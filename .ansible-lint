---
# Configuração do ansible-lint
profile: production

# Pular regras específicas se necessário
# skip_list:
#   - role-name
#   - yaml[line-length]

# Excluir diretórios do lint
exclude_paths:
  - .venv/
  - .molecule/
  - .cache/
  - .git/
  - .ansible/
  - collections/
  - _temp/
  - node_modules/
  - '*.tar.gz'
  - '**/.molecule/'
  - '**/.cache/'
  - '**/molecule/*/.cache/'
  - '**/molecule/*/.molecule/'

# Usar regras progressivas
progressive: true

# Tratamento de warnings
warn_list:
  - experimental
  - no-changed-when
  - command-instead-of-module

# Nível de verbosidade
# verbosity: 1

---
# ansible-lint configuration
profile: production

# Skip specific rules if needed
# skip_list:
#   - role-name
#   - yaml[line-length]

# Exclude directories from linting
exclude_paths:
  - .venv/
  - .molecule/
  - .cache/
  - .git/
  - .ansible/
  - collections/
  - _temp/
  - node_modules/
  - '*.tar.gz'
  - '**/.molecule/'
  - '**/.cache/'
  - '**/molecule/*/.cache/'
  - '**/molecule/*/.molecule/'

# Use progressive rules
progressive: true

# Warning handling
warn_list:
  - experimental
  - no-changed-when
  - command-instead-of-module

# Verbosity level
# verbosity: 1

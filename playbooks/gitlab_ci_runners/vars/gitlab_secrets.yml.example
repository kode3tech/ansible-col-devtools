---
# Example secrets file for GitLab CI Runners playbooks.
#
# IMPORTANT:
# - Do not commit real secrets.
# - Copy this file to gitlab_secrets.yml and encrypt with Ansible Vault.
#
#   cp playbooks/gitlab_ci_runners/vars/gitlab_secrets.yml.example \
#     playbooks/gitlab_ci_runners/vars/gitlab_secrets.yml
#
#   ansible-vault encrypt playbooks/gitlab_ci_runners/vars/gitlab_secrets.yml
#
# Then update playbooks to reference vars/gitlab_secrets.yml (instead of .example)
# and run:
#
#   ansible-playbook playbooks/gitlab_ci_runners/install-production.yml \
#     -i inventory.ini \
#     --ask-vault-pass

# GitLab API token (Personal Access Token) for runner creation via API.
# Required scopes: create_runner
vault_gitlab_api_token: "CHANGE_ME"

# Optional alternatives:
# - Runner authentication token (new workflow; glrt-...)
# - Legacy registration token (deprecated/disableable on newer GitLab)
vault_gitlab_runner_token: ""
vault_gitlab_registration_token: ""

# Optional convenience mapping (alternative pattern):
# If you prefer, you can define the role variable here so playbooks don't need
# to map it in `vars:`.
#
# gitlab_ci_runners_api_token: "{{ vault_gitlab_api_token }}"
# gitlab_ci_runners_runner_token: "{{ vault_gitlab_runner_token }}"
# gitlab_ci_runners_registration_token: "{{ vault_gitlab_registration_token }}"
